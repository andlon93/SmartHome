@page "/weatherforecast"

<PageTitle>Weather forecast</PageTitle>

@using SmartHomeWebApp.Data
@inject WeatherForecastService WeatherForecastService


<style>
    body {
        background-color: #fcf6e8;
    }
</style>

<h1>Weather Forecast</h1>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString() @forecast.Date.ToLongTimeString()</td>
                    <td>@(forecast.TemperatureC + "°")</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private SmartHomeWebApp.Data.WeatherForecast[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await WeatherForecastService.GetForecastAsync(DateTime.Now);
    }
}
